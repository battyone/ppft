[run]
include =
    *2.7/site-packages/ppft*/pp*
    *3.6/site-packages/ppft*/pp*
omit = 
    */examples/*
    */tests/*
# timid = true
# parallel = true
# concurrency = multiprocessing # thread
data_file = $TRAVIS_BUILD_DIR/.coverage
debug = trace,dataio

[paths]
source =
    python2
    python3
    server2
    server3
    */site-packages/ppft*/pp*

[report]
include =
    */pp/*
    */ppft/*
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
show_missing = true
ignore_errors = true
