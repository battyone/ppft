[run]
include =
    */pp/*
    */pp/server/*
    */ppft/*
    */ppft/server/*
#   */site-packages/ppft*/pp/*
#   */site-packages/ppft*/pp/server/*
#   */site-packages/ppft*/ppft/*
#   */site-packages/ppft*/ppft/server/*
omit = 
    */examples/*
    */tests/*
# timid = true
# parallel = true
# concurrency = multiprocessing # thread
data_file = $TRAVIS_BUILD_DIR/.coverage
# data_file = ./.coverage
debug = trace

[paths]
source =
    ppft/*
    */site-packages/ppft*/pp/*
    */site-packages/ppft*/ppft/*

[report]
include =
    */pp/*
    */pp/server/*
    */ppft/*
    */ppft/server/*
#   */site-packages/ppft*/pp/*
#   */site-packages/ppft*/pp/server/*
#   */site-packages/ppft*/ppft/*
#   */site-packages/ppft*/ppft/server/*
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
# show_missing = true
ignore_errors = true
